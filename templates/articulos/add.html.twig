{% extends 'base.html.twig' %}

{% block title %}Añadir Producto{% endblock %}

{% block body %}
    <div class="container">
    <div class="row">
        <div class="login-form bg-light mt-4 p-4">
            <form method="post" class="row g-3" action="{{ path('app_articulos_add') }}">
                <h1 class="h3 mb-3 font-weight-normal">Añadir Producto</h1>
                <div class="col-12">
                    <label for="nombre">Nombre</label>
                    <input type="text" name="nombre" id="nombre" class="form-control" required>
                </div>
                <div class="col-12">
                    <label for="precio">Precio</label>
                    <input type="text" name="precio" id="precio" class="form-control" required>
                </div>
                <div class="col-12">
                    <label for="stock">Stock</label>
                    <input type="text" name="stock" id="stock" class="form-control" required>
                </div>
                <div class="col-12">
                    <label for="foto">Foto</label>
                    <input type="file" name="foto" id="foto" class="form-control" required>
                </div>
                <div class="col-12">
                    <label for="idMarca">Marca</label>
                    <select name="idMarca" id="idMarca" class="form-select" required>
                        {% for marca in marcas %}
                            <option value="{{ marca.idMarca }}">{{ marca.nombre }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-12">
                    <label for="tipo">Tipo Producto</label>
                    <select name="tipo" id="tipo" class="form-select" required>
                        <option name="Consola" id="consola", class="form-select">Consola</option>
                        <option name="VideoJuego" id="videojuego", class="form-select">VideoJuego</option>
                        <option name="DispositivoMovil" id="dipositivo", class="form-select">Dispositivo Movil</option>
                    </select>
                </div>

                <div class="hidden">
                    <div class="col-12">
                        <label for="almacenamiento">Almacenamiento</label>
                        <input type="text" name="almacenamiento" id="alamcenamiento" class="form-control">
                    </div>
                    <div class="col-12">
                        <label for="ram">RAM (en GB)</label>
                        <input type="text" name="ram" id="ram" class="form-control">
                    </div>
                    <div class="col-12">
                        <label for="pantalla">Tamano Pantalla (en Pulgadas)</label>
                        <input type="text" name="pantalla" id="pantalla" class="form-control">
                    </div>
                    </div>
                <div class="col-12">
                <br>
                    <button class="btn btn-lg btn-primary float-end" type="submit">
                        Añadir Producto
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}


{% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}