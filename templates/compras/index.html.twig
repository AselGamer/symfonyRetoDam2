{% extends 'base.html.twig' %}

{% block title %}Transacciones{% endblock %}

{% block body %}
<h1 class="m-2 d-flex justify-content-center">Transacciones</h1>

    <div class="align-self-end">
            <div class=" d-flex flex-row justify-content-end align-items-end">

                <div class="col-md-8">

                <div class="search d-flex flex-row justify-content-end align-items-center">
                    <i class="fa fa-search"></i>
                    <input type="text" class="form-control inputBuscarTodo h-auto" placeholder="Buscar todas las transacciones">
                    <button class="btn btn-primary btnBuscarTransacciones btnControl h-auto">Buscar</button>
                </div>
                
                </div>
                
            </div>
        </div>


    <div class="align-self-end">
        <div class=" d-flex flex-row justify-content-end align-items-end">

            <div class="col-md-8">

            <div class="search d-flex flex-row justify-content-end align-items-center">
                <i class="fa fa-search"></i>
                <input type="text" class="form-control inputBuscarTabla w-50" placeholder="Buscar en esta tabla">
                <button class="btn btn-primary btnBuscarTabla btnControl">Buscar</button>
            </div>
            
            </div>
            
        </div>
    </div>


    <table class = "text-center table table-bordered table-hover m-0">
       <thead class="thead-dark">
           <tr>
               <th>
                   ID
               </th>
               <th>
                   USUARIO
               </th>
               <th>
                   LATITUD
               </th>
               <th>
                   LONGITUD
               </th>
               <th>
                   TIPO TRANSACCION
               </th>
               <th>
                   MAS INFO
               </th>
           </tr>
       </thead>
        <tbody class="tablaBuscar">
        {% for transaccion in transacciones %}
        <tr>
            <td>{{ transaccion.idtransaccion }}</td>
            <td>{{ transaccion.idusuario.nombre }}</td>
            <td>{{ transaccion.latitud }}</td>
            <td>{{ transaccion.longitud }}</td>
            <td>{{ transaccion.tipotransaccion }}</td>
            <td><div id="tdEditar"><a href="{{ path('app_transaccion_ver', {'id': transaccion.idtransaccion}) }}"><button class="btn btn-lg btn-primary float-start btnControl">Ver Detalles</button></a></div></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if paginas > 1 %}
        <nav aria-label="Seleccione una pagina">
            <ul class="pagination">
                <li class="page-item"><a class="page-link text-dark" href="{{ path('app_transacciones', {'offset': app.request.get('offset') - 1}) }}">Anterior</a></li>
                {% for i in 1..paginas %}
                    <li class="page-item"><a class="page-link text-dark" href="{{ path('app_transacciones', {'offset': i}) }}">{{ i }}</a></li>
                {% endfor %}
                <li class="page-item"><a class="page-link text-dark" href="{{ path('app_transacciones', {'offset': app.request.get('offset') + 1}) }}">Siguiente</a></li>
            </ul>
        </nav>
    {% endif %}
    
{% endblock %}
