{% extends 'base.html.twig' %}

{% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block title %}Registro{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="login-form bg-light mt-4 p-4">
            <h1 class="h3 mb-3 font-weight-normal">Cambiar Datos de Empleados</h1>
            <form action="{{ path('app_empleado_edit', {id: empleado.idempleado}) }}" method="POST">
                <div class="col-12">
                    <label for="inputEmail">Email</label>
                    <input type="email" name="email" id="inputEmail" class="form-control" value="{{empleado.email}}" required autofocus>
                </div>
                <div class="col-12">
                    <label for="inputName">Nombre</label>
                    <input type="text" name="nombre" id="inputName" class="form-control" value="{{empleado.nombre}}" required>
                </div>
                <div class="col-12">
                    <label for="inputLastName1">Apellido 1</label>
                    <input type="text" name="apellido1" id="inputLastName1" class="form-control" value="{{empleado.apellido1}}" required>
                </div>
                <div class="col-12">
                    <label for="inputLastName2">Apellido 2</label>
                    <input type="text" name="apellido2" id="inputLastName2" class="form-control" value="{{empleado.apellido2}}" required>
                </div>
                <div class="col-12">
                    <label for="inputPassword2">Nueva Password</label>
                    <input type="password" name="newPassword" id="inputPassword2" class="form-control">
                </div>
                <div class="col-12">
                    <label for="inputGerente">Gerente</label>
                    <select name="gerente" id="inputGerente" class="form-control">
                        {% if empleado.gerente == 0 %}
                            <option value="0" selected>No</option>
                            <option value="1">Yes</option>
                        {% elseif empleado.gerente == 1 %}
                            <option value="0">No</option>
                            <option value="1" selected>Yes</option>
                        {% endif %}
                    </select>
                </div>
                <div class="col-12">
                    <button class="btn btn-lg btn-primary float-end" type="submit">
                        Editar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
